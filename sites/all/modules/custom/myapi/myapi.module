/**
 * Callback functions for api/
 */
function apiRouter ($type, $id, $page=0) {

  //set header to json
  header('Content-Type: application/json');
  //$id = basename($id, '.json');


  switch ($type) {
    /*
    @request a menu
    */
    case 'menu':
      $menu = getMenu($id);
      echo json_encode($menu);
      break;

    /*
    @request a block
    */
    case 'block':
      $block = getBlock($id);
      echo json_encode($block);
      break;

    /*
    @request a page
    */
    case 'page':
      $page = getPage($id);
      echo json_encode($page);
      break;

    /*
    @request a node
    */
    case 'node':
      $node = getNode($id);
      echo json_encode($node);
      break;

    /*
    @request a view
    */
    case 'view':
      $view = getViews($id);
      echo json_encode($view);
      break;


    /*
    @request a test
    */
    case 'test':
      $view = getTest($id);
      break;


    /*
    DEFAULT
    */
    default:
      break;
  }

}

